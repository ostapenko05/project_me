  
.about {
  position: relative;
  padding-top: 150px;
  height: 70vh;
  @include desktop {
    height: 70vh;
    padding-top: 7%;
  }
}
.about__container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
  
.about__left {
  margin: 0 10%;
}

.about__right {
 width: 60%;
 padding-right: 10%;
 display: flex;
 flex-direction: column;
 justify-content: space-around;
  &:before {
    content: "*";
    color: red;
    font-size: 35px;
    position: absolute;
    top: 59%;
    left: 40%;
    opacity: .2;
    @include desktop {
      top: 68%;
      left: 37%;
    }
  }
}

.about__title {
  font-family: sans-serif;
  font-weight: 800;
  font-size: 36px;
}