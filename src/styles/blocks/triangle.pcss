  
.triangles {
  display: flex;
  margin-top: -39px;
  color: #fff;
}
  
.triangles__item {
  width: 50%;
  display: block;
  height: 100px;
  fill: currentColor;
}

.triangle__down {
  width: 100%;
  height: 50%;
  background-color: #fff;
  @include desktop {
    height: 10%;
  }
}

.triangles__block {
  transform: rotate(180deg);
  display: flex;
  flex-direction: row;
  margin-bottom: -100px;
}

.triangles__item-right {
  width: 50%;
  display: block;
  height: 100px;
  fill: #fff;
}

.triangles__item-left {
  width: 50%;
  display: block;
  height: 100px;
  fill: #fff;
}
